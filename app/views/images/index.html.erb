<% provide :title, t(".manage_image") %>
<div class="container">
  <div class="contact-left-block">
    <h3><%= raw t(".all_images") %></h3>
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th><%= t ".id" %></th>
          <th><%= t ".room_id" %></th>
          <th><%= t ".image" %></th>
          <th><%= t ".create_at" %></th>
          <% if current_user&.staff? || current_user&.admin? %>
          <th><%= t ".action" %></th>
          <% end %>
        </tr>
      </thead>
      <tbody class="bg-white">
        <%= render @images %>
      </tbody>
    </table>
  </div>
  <%= paginate @images, theme: "twitter-bootstrap-3" %>
</div>
