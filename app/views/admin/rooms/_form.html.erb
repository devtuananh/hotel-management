<%= form_for [:admin, @room] do |f| %>
  <%= render "shared/error_messages", object: f.object %>

    <%= f.label :category_id %>
    <%= f.collection_select :category_id, Category.all, :id, :name, {},
      class: "form-control" %>

    <%= f.label :label %>
    <%= f.text_field :label, class: "form-control", placeholder: t(".label") %>

    <%= f.label :floor %>
    <%= f.number_field :floor, class: "form-control", placeholder: t(".floor") %>

    <% if current_page?(new_admin_room_path) %>
      <%= f.label :images %>
      <%= t(".recommend_image") %>
      <%= f.fields_for :images do |p| %>
        <%= p.file_field :image_link, class: "upload-image" %>
      <% end %>
    <% else %>
      <div class="row">
        <aside class="col-md-4">
          <%= f.fields_for :images do |p| %>
            <%= p.file_field :image_link, class: "upload-image" %>
          <% end %>
        </aside>
        <div class="col-md-8">
          <% @room.images.each do |image| %>
            <%= image_tag image.image_link.url, size: Settings.room_image_mini_size %><br>
          <% end %>
        </div>
      </div>
    <% end %>

    <%= f.submit yield(:button_text), class: "submit-btn" %>
<% end %>
