<tr class="user-row">
  <td><a class="user-name"><%= category.name %></a></td>
  <td><%= category.price %></td>
  <td><%= l category.created_at, format: :own %></td>
  <td></td>
  <% if is_admin? %>
    <td class="action-btn">
      <%= link_to t(".delete"), admin_category_path(category), method: :delete,
        data: {confirm: t(".confirm")}, class: "submit-btn" %>
      <%= link_to t(".edit"), edit_admin_category_path(category),
        class: "submit-btn" %>
    </td>
  <% end %>
</tr>
