<% provide :title, t(".manage_category") %>
<div class="container">
  <div class="contact-left-block">
    <h3><%= raw t(".all_categories") %></h3>
    <% if is_admin? %>
      <div class="text-right">
        <%= link_to t(".new_category"), new_admin_category_path,
          class: "book-now-btn" %>
      </div>
    <% end %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= t ".name_category" %></th>
          <th><%= t ".price" %></th>
          <th><%= t ".create_at" %></th>
          <th><%= t ".rooms_state" %></th>
          <% if is_admin? %>
            <th><%= t ".action" %></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <%= render @categories %>
      </tbody>
    </table>
    <%= paginate @categories, theme: "twitter-bootstrap-3" %>
  </div>
</div>
