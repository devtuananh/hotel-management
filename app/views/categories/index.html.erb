<% provide :title, t(".manage_category") %>
<div class="container">
  <div class="contact-left-block">
    <h3><%= raw t(".all_categories") %></h3>
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th><%= t ".name_category" %></th>
          <th><%= t ".price" %></th>
          <th><%= t ".create_at" %></th>
          <% if current_user&.admin? %>
            <th><%= t ".action" %></th>
          <% end %>
        </tr>
      </thead>
      <tbody class="bg-white">
        <%= render @categories %>
      </tbody>
    </table>
  </div>
  <%= paginate @categories, theme: "twitter-bootstrap-3" %>
</div>
