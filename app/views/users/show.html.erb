<% provide :title, @user.name %>
<section class="section user-home-wrapper">
  <div class="user-inner-wrapper">
    <%= gravatar_for @user, size: Settings.gravatar_large_size %>
    <div class="user-info">
      <h1><%= @user.name %></h1>
      <p>
        <%= @user.email %><br><%= @user.phone %>
      </p>
    </div>
  </div>
</section>
<% if is_customer? %>
  <section class="section">
    <div class="container">
      <div class="col-md-6 contact-form">
        <h3><%= raw t(".my_notifications") %></h3>
        <%= render "notifications" %>
      </div>
      <div class="col-md-6 contact-left-block">
        <h3><%= raw t(".my_ratings") %></h3>
        <%= render "user_ratings" %>
      </div>
    </div>
  </section>
<% end %>
