<% provide :title, t(".users_management") %>
<div class="container">
  <div class="contact-left-block">
    <h3><%= raw t(".all_users") %></h3>
    <%= paginate @users, theme: "twitter-bootstrap-3" %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= t ".id" %></th>
          <th><%= t ".name" %></th>
          <th><%= t ".email" %></th>
          <th><%= t ".phone" %></th>
          <% if current_user&.admin? %>
            <th><%= t ".action" %></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <%= render @users %>
      </tbody>
    </table>
  </div>
  <%= paginate @users, theme: "twitter-bootstrap-3" %>
</div>
